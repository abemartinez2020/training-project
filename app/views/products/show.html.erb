<h1>Exclusive Clothing for The Refined</h1>

<div class="filter">
  <p>Item Search</p>
  <span>Category Filter</span>
</div>

<div class="catalog-container flex flex-wrap justify-start items-stretch gap-x-2.5 gap-y-2.5  w-10/12 mx-auto my-7"

      <!-- product cards with add button -->

      <% @products.each do |product| %>
          <div class="product-card w-3/12 bg-white">
            <%=image_tag('product_images/' + product.image, class:"w-full")%>
            <div class="product-card_text w-full bg-gray-200 p-3">  
              <h3><%= product.name %></h3>
                <h6><strong>$<%= product.price %></strong></h6>
                <p><%= product.description %></p>
                <p><%= "available: #{product.unit_stock}" %></p>
                <p class="bg-blue-400 text-center text-white text-lg mt-2">+</p>
                <!--<%= button_to "+", class:"bg-blue-200" %>-->
              </div>
          </div>
        <% end %>
</div>