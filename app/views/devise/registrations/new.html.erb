<div class='flex'>
  <div class='pt-24 w-6/12 text-center' >
    <div class=" py-8 px-5  form-container bg-gray-200 w-9/12 mx-auto">
      <h2 class='text-3xl mb-7'>Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => 'w-4/5 mx-auto'} ) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-5">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, class: "py-1 px-2"  %>
        </div>

        <div class="field mb-5">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, class: "py-1 px-2"  %>
        </div>  
        
        <div class="field mb-5">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "py-1 px-2"  %>
        </div>

        <div class="field mb-5">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "py-1 px-2"  %>
        </div>

        <div class="field mb-5">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "py-1 px-2"  %>
        </div>

        <div class="actions ">
          <%= f.submit "Sign up", class: "py-2 px-1 mb-11 bg-black hover:bg-gray-800 w-3/5 text-white" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
  </div>

    <%=image_tag 'sign-up_img.jpg', alt: 'sign-up image', class: 'w-6/12'%>
</div>



